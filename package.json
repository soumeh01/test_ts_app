{
  "name": "ts-basic-app",
  "displayName": "TypeScript Basic App",
  "description": "A basic TypeScript application with testing and packaging support",
  "version": "1.1.0",
  "publisher": "your-publisher-name",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": "^20.18.0",
    "yarn": "^1.22.0",
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "typescript",
    "demo",
    "basic"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/soumeh01/test_ts_app.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {},
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "git clean -f -x ./node_modules ./dist ./coverage ./.vscode-test *.vsix",
    "lint": "echo \"✅ Lint check completed!\"",
    "lint:fix": "echo \"✅ Lint fix completed!\"",
    "test": "jest --coverage",
    "package": "npm run build && vsce package --no-dependencies --allow-star-activation --allow-missing-repository --skip-license"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^20.11.30",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "@vscode/vsce": "^3.1.0",
    "yargs": "^18.0.0",
    "@types/yargs": "^17.0.33"
  }
}